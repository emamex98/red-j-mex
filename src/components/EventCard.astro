---
import { Image } from "astro:assets";
import arrow from "../assets/arrow.svg";
import calendar from "../assets/calendar.png";
import clock from "../assets/clock.png";
import pin from "../assets/pin.png";
import moment from "moment";

const { title, date, location, link, summary, linkTo, featuredImage } =
  Astro.props;

moment.locale("es-mx");
const formattedDate = moment(date).format("LL");
const formattedTime = moment(date).format("LT");

const imgSrc = featuredImage.fields.file.url;
---

<div class="card">
  <div class="card-layout">
    <div
      class="card-image"
      style={`background-image: url('https://${imgSrc}')`}
    >
    </div>
    <div class="card-text">
      <h2>{title}</h2>
      <p class="card-summary">{summary}</p>
      <p class="card-event-info">
        <Image src={calendar} alt="Fecha" width={32} height={32} />
        {formattedDate}
      </p>
      <p class="card-event-info">
        <Image src={clock} alt="Hora" width={32} height={32} />
        {formattedTime} (hora del centro)
      </p>

      <p class="card-event-info">
        <Image src={pin} alt="Lugar" width={32} height={32} />
        {
          link && (
            <a href={link} target="_blank">
              {location}
            </a>
          )
        }
        {!link && location}
      </p>

      <div class="card-actions">
        <a href={linkTo} target="_blank">
          <button class="card-cta">
            <Image src={arrow} alt="Ver mÃ¡s" />
          </button>
        </a>
      </div>
    </div>
  </div>
</div>

<style lang="scss">
  .card {
    border: 0.2rem solid $border-color;
    border-radius: 0.5rem;
    height: fit-content;
    font-weight: 200;
    @include transition(border-color);

    &-layout {
      display: flex;
    }

    &-image {
      width: 40%;
      flex-grow: 1;
      background-position: center;
      background-size: cover;
      border-radius: 0.3rem 0 0 0.3rem;
    }

    &-text {
      padding: 1.5rem;
      width: 60%;

      & > h2 {
        margin: 0.24rem 0;
        font-weight: 450;
        font-size: 1.6rem;
      }
    }

    &-summary {
      margin: 1rem 0;
      font-size: 1rem !important;
    }

    &-event-info {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      margin: 0.5rem 0;
      font-size: 1.2rem;

      & a,
      & a:hover,
      & a:visited {
        color: $accent-color !important;
        text-decoration: underline !important;
      }
    }

    @media screen and (max-width: $mobile-breakpoint) {
      &-layout {
        display: flex;
        flex-direction: column;
      }

      &-image {
        width: auto;
        height: 10rem;
        background-position: center;
        background-size: cover;
        border-radius: 0.3rem 0.3rem 0 0;
      }

      &-text {
        width: auto;
      }
    }

    & a,
    & a:hover,
    & a:visited {
      color: $text-color;
      text-decoration: none;
    }

    &-actions {
      display: flex;
      justify-content: end;
      padding-top: 1rem;
    }

    &-cta {
      display: block;
      height: 3rem;
      width: 3rem;
      border-radius: 50%;
      background-color: $accent-color;
      border: 0 solid $accent-color;
      @include transition(background-color);
    }

    &-cta:hover {
      cursor: pointer;
      background-color: $primary-color;
    }
  }
</style>
