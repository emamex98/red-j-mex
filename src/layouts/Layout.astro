---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="es-MX">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />

    <title>{title} {title ? "|" : null} Red J+MEX</title>
    <meta
      name="description"
      content="La Red Mexicana de Jóvenes y Adolescentes Positivxs trabaja por la igualdad social y la visibilidad de las juventudes que viven con VIH. ¡Infórmate y participa!"
    />

    <meta property="og:title" content={title} />
    <meta property="og:site_name" content="Red J+MEX" />
    <meta property="og:image" content="/og-card.png" />
  </head>

  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>

  <style lang="scss">
    @import url("https://fonts.googleapis.com/css2?family=Fredoka:wght@300..700&display=swap");

    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
      font-size: 16px;
      font-family: "Fredoka", serif;
      font-optical-sizing: auto;
      font-weight: normal !important;
    }

    main {
      margin-top: 4.9rem;
      display: flex;
      flex-direction: column;
    }
  </style>
</html>
